@model WebApplication.Models.TripPath

@{
    ViewBag.Title = "Ajouter un intéréraire aérien";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ajouter un intéréraire aérien</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>TripPath</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.DestinationAirport, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.DestinationAirport, new SelectList(ViewBag.Airports, "Value", "Text"))

         @Html.ValidationMessageFor(model => model.DestinationAirport, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DepartureAirport, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.DepartureAirport, new SelectList(ViewBag.Airports, "Value", "Text"))
                @Html.ValidationMessageFor(model => model.DepartureAirport, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Airplane, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Airplane, new SelectList(ViewBag.Airplanes, "Value", "Text"))
                @Html.ValidationMessageFor(model => model.Airplane, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
